<form class="add-contact-form" action="/api/contacts" method="post">
  <h2>Contact Form</h2>
  <fieldset class="fields">
    <label class="label" for="full_name">Full Name</label>
    <input
      class="form-input indented"
      type="text"
      name="full_name"
      id="full_name"
      required
    />

    <label class="label" for="email">Email address:</label>
    <input class="form-input indented" type="email" name="email" id="email" required/>

    <label class="label" for="phone_number">Telephone number:</label>
    <input
      class="form-input indented"
      type="text"
      name="phone_number"
      id="phone_number"
      required
    />

    <label for="tags" class="label">Tags</label>
    <input class="form-input indented" type="text" name="tags" id="tags" placeholder="Separate tags by a comma">

    <div class="buttons">
      <button class="primary-btn">Submit</button>
      <button type="reset" class="primary-btn">Cancel</button>
    </div>
  </fieldset>
</form>